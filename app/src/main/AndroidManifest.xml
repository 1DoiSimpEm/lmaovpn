<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- CHANGE_NETWORK_STATE and BIND_VPN_SERVICE are signature permissions on modern Android,
         the app will still work for VPN without holding them explicitly -->
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.BIND_VPN_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <!-- For showing VPN foreground notification on Android 13+ -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:name=".VpnApplication"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Freevpn">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Freevpn">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Placeholder log window used by the OpenVPN LaunchVPN activity -->
        <activity
            android:name=".activities.LogWindow"
            android:exported="false"
            android:theme="@style/Theme.Freevpn" />

        <!-- OpenVPN wrapper service used for VPN tunnel -->
        <service
            android:name="com.amobear.freevpn.data.vpn.openvpn.OpenVPNWrapperService"
            android:exported="true"
            android:permission="android.permission.BIND_VPN_SERVICE"
            android:foregroundServiceType="specialUse"
            tools:ignore="ForegroundServicePermission">
            <intent-filter>
                <action android:name="android.net.VpnService" />
            </intent-filter>
            <property
                android:name="android.app.PROPERTY_SPECIAL_USE_FGS_SUBTYPE"
                android:value="vpn" />
        </service>


        <!-- Status service used by the OpenVPN UI/activity -->
        <service
            android:name="de.blinkt.openvpn.core.OpenVPNStatusService"
            android:exported="false" />

        <!-- Keep-alive job service for maintaining the VPN connection -->
        <service
            android:name="de.blinkt.openvpn.core.keepVPNAlive"
            android:exported="true"
            android:permission="android.permission.BIND_JOB_SERVICE" />

        <!-- Activity from OpenVPN module that handles VPN permission + connection start -->
        <activity
            android:name="de.blinkt.openvpn.LaunchVPN"
            android:autoRemoveFromRecents="true"
            android:excludeFromRecents="true"
            android:label="@string/app_name"
            android:taskAffinity=".LaunchVPN"
            android:theme="@style/Theme.Freevpn"
            android:exported="true">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- Disconnect confirmation used by notification action -->
        <activity
            android:name="de.blinkt.openvpn.activities.DisconnectVPN"
            android:autoRemoveFromRecents="true"
            android:excludeFromRecents="true"
            android:noHistory="true"
            android:theme="@style/Theme.Freevpn"
            android:exported="false" />
    </application>

</manifest>